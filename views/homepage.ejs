    </div>
    <script>
        function updateSizes() {
            // Lấy chiều cao của .filter-top
            const filterTop = document.querySelector(".filter-top");
            const filterTopHeight = filterTop.clientHeight;
            const filterTopWidth = filterTop.clientWidth;

            // Set chiều cao của .big-title bằng với chiều cao của .filter-top
            const bigTitle = document.querySelector(".big-title");
            bigTitle.style.height = `${filterTopHeight}px`;

            // Đảm bảo .navbar nằm sát dưới đáy của .big-title
            const navbar = document.querySelector(".navbar");
            navbar.style.width = `${filterTopWidth / 3}px`;
        };
        // Sử dụng sự kiện "load" để thực thi khi trang được tải hoàn toàn
        window.addEventListener("load", updateSizes);

        // Sử dụng sự kiện "resize" để cập nhật khi kích thước cửa sổ trình duyệt thay đổi
        window.addEventListener("resize", updateSizes);
    </script>
</body>

